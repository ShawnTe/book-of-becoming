<h1>Edit acknowledgment</h1>

<form action="/posts/<%= @post.id %>" method="post">
  <input name="_method" value="put" type="hidden" >
  <input type="text" name="post[title]" placeholder="Acknowledgment" value="<%= @post.title %>"><br>

  <%= erb :'/tags/_tag-entry' %>
  <br>


  <textarea rows="4" cols="50" name="post[note]"><%= @post.note %></textarea><br>
  <input type="submit">
</form>
<br>
<form action="/posts/<%= @post.id %>" method="post">
  <input name="_method" value="delete" type="hidden" >
  <input type="submit" value="Delete this acknowledgment">
</form>

